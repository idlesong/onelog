<% provide(:title, @title) %>
<div class="row">
  <div class="col-md-3">
    <h1></h1>
    <%= image_tag("blog2-thumb.jpg") %>
    <p>
      <strong>Name:</strong>
      <%= @user.name %>
    </p>

    <% @user ||= current_user %>
    <div class="stats">
      <a href="<%= following_user_path(@user) %>">
        <strong id="following" class="stat">
          <%= @user.following.count %>
        </strong>
        following
      </a>
      <a href="<%= followers_user_path(@user) %>">
        <strong id="followers" class="stat">
          <%= @user.followers.count %>
        </strong>
        followers
      </a>
    </div>
  </div>
  <div class="col-md-9">
    <h3><%= @title %></h3>
    <% if @users.any? %>
    <ul class="list-group">
      <% @users.each do |user| %>
      <li class="list-group-item">
        <%= image_tag("blog2-thumb.jpg") %> <%= link_to user.name, user %>
      </li>
      <% end %>
    </ul>
    <% end %>
  </div>
</div>
